<br/>

<div class="container">
  <div class="card border-dark text-black bg-body-tertiary mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-12">
        <h2 class="card-header text-white text-center bg-dark"><%= @friend.first_name + ' ' + @friend.last_name %></h2>

        <div class="card-body">
          <p class="card-text d-flex felx-column text-dark"><%= render @friend %></p>
        </div>

        <div class="card-footer bg-dark d-flex justify-content-center">
          
          <div class="btn-group" role="group" style="margin-right: 10px;">
          <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
          </div>
          
          <div class="btn-group" role="group" style="margin-right: 10px;">
          <%= button_to "Delete Friend", @friend, method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-danger", onclick: "return confirm('Are you sure?');" %>
          </div>

          <div class="btn-group" role="group">
          <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-warning" %> 
          </div>
                           
        </div>
      </div>
    </div>  
  </div>
</div>
